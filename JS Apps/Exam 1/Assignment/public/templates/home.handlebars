<div class="homePage">
    <form class="form-inline col-md-6" id="container-home">
        <div class="form-group">
            <label class="sr-only">Create new material</label>
            <button id="btn-create" class="btn btn-default">Create</button>
            <input id="title" type="text" class="form-control" placeholder="Title">
            <textarea class= "material" name="textarea" rows="10" cols="50"></textarea>
        </div>
        <div class="form-group">
            <label class="sr-only">Leave comment</label>
            <button id="btn-leave" class="btn btn-default">Put</button>
            <textarea class="comment" name="textarea" rows="10" cols="50"></textarea>
        </div>
    </form>
</div>